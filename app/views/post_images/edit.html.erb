<div class="text-center">
  <h1>EDIT</h1>
  <%= form_with model: @post_image, local:true do |f| %>
    <h2>画像</h2>
    <%= f.attachment_field :image %>
    <h4>題名</h4>
    <%= f.text_field :title, required: true %>
    <h4>タグ</h4>
    <% unless @tag %>
      <%= f.text_field :tag_names %>
    <% else %>
    <% @tag_names = [] %>
    <% @post_image.post_image_tag_relations.each do |tag| %>
      <% @tag_names << tag.tag.tag_name %>
    <% end %>
    <% @tag_names.join(' ') %>
      <%= f.text_field :tag_names, value: @tag_names, required: true %>
    <% end %>

    <h4>説明</h4>
    <%= f.text_area :body, size: "60×20" %>
    <%= f.submit '編集' %>
  <% end %>
</div>