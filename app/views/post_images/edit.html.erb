<div class="text-center">
  <h1>EDIT</h1>
  <%= form_with model: @post_image, local:true do |f| %>
    <h2>画像</h2>
    <%= f.attachment_field :image %>
    <h4>題名</h4>
    <%= f.text_field :title %>
    <h4>タグ</h4>
    <%= f.text_field :tag_names %>
    <h4>説明</h4>
    <%= f.text_area :body, size: "60×20" %>
    <%= f.submit '編集' %>
  <% end %>
</div>