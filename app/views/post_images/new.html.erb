<div class="text-center">
  <h1>POST</h1>
  <%= form_with model: @post_image, local:true do |f| %>
    <h2>画像</h2>
    <%= f.attachment_field :image, required: true %>
    <h4>題名</h4>
    <%= f.text_field :title, required: true %>
    <h4>タグ</h4>
    <%= f.text_field :tag_names, required: true %>
    <h4>説明</h4>
    <%= f.text_area :body, required: true, size: "60×20" %>
    <%= f.submit '投稿' %>
  <% end %>
</div>