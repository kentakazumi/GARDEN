
  <% post_image.comments.each do |comment| %>
  <div class="media border mb-3">
  <div class="media-body ml-4 p-3">
     <p><i class="fas fa-user"></i><%= comment.user.name %></p>
     <p><%= comment.comment %></p>
     <div class="text-right">
      <% if current_user.id == comment.user.id %>
        <%= link_to "削除", post_image_comment_path(comment.post_image, comment), method: :delete , remote: true %>
      <% end %>
    </div>
  </div>
  </div>
  <% end %>